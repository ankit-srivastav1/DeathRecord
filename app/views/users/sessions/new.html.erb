<div class="page-wrapper bg-blue p-t-100 p-b-100 font-robo">
  <div class="wrapper wrapper--w680">
    <div class="card card-1">
      <div class="card-heading"></div>
      <div class="card-body">
        <center><h2 class="title">Login</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= flash[:alert] %>
        <%= flash[:notice] %>
        </center>
        <br>
        <br>
        <center>
          <div class="input-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "input--style-1", autofocus: true, autocomplete: "email" %>
          </div>
          <br>

          <div class="input-group">
            <%= f.label :password %><br />
            <%= f.password_field :password,class: "input--style-1", autocomplete: "current-password" %>
          </div>
          <br>

          <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>

          <div class="p-t-20">
            <%= f.submit "Log in"  , class: "btn btn--radius btn--green" %>
          </div>
          <% end %>
          <% end %>
          <%= render "users/shared/links" %>

        </center>
      </div>
    </div>
  </div>
</div>
